<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Manage Users - Supermarket App</title>
  <style>
    .stat-card {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.2);
    }

    .stat-card h3 {
      margin: 0;
      font-size: 2rem;
      font-weight: bold;
    }

    .stat-card p {
      margin: 5px 0 0 0;
      opacity: 0.9;
      font-size: 0.95rem;
    }

    .badge-admin {
      background: #e74c3c;
      color: white;
    }

    .badge-customer {
      background: #27ae60;
      color: white;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">ðŸ›’ Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/inventory">ðŸ“¦ Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">ðŸ‘¥ Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">ðŸšª Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>

  <!-- Container -->
  <div class="container">
    <h2 class="page-title">ðŸ‘¥ Manage Users</h2>

    <div class="row gap-3 mb-4">
      <div class="col-md-3">
        <div class="stat-card">
          <h3><%= users && users.length ? users.length : 0 %></h3>
          <p>Total Users</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <h3><%= users && users.filter ? users.filter(u => u.role === 'customer' || u.role === 'user').length : 0 %></h3>
          <p>Customers</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <h3><%= users && users.filter ? users.filter(u => u.role === 'admin').length : 0 %></h3>
          <p>Admins</p>
        </div>
      </div>
    </div>

    <% if (users && users.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Contact</th>
              <th>Role</th>
              <th>Registered</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(u => { %>
              <tr>
                <td><strong>#<%= u.id %></strong></td>
                <td><%= u.username %></td>
                <td><%= u.email %></td>
                <td><%= u.contact || 'N/A' %></td>
                <td>
                  <% if (u.role === 'admin') { %>
                    <span class="badge badge-admin">ADMIN</span>
                  <% } else { %>
                    <span class="badge badge-customer">CUSTOMER</span>
                  <% } %>
                </td>
                <td><%= u.created_at ? new Date(u.created_at).toLocaleDateString() : 'N/A' %></td>
                <td>
                  <% if (u.id !== user.id && u.role !== 'admin') { %>
                    <a href="/delete-user/<%= u.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">
                      Delete
                    </a>
                  <% } else if (u.id === user.id) { %>
                    <span class="badge bg-secondary">Current User</span>
                  <% } else if (u.role === 'admin') { %>
                    <span class="badge bg-secondary">Cannot delete</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info mt-4">
        <p class="mb-0">No users found.</p>
      </div>
    <% } %>
  </div>
</body>
</html>
