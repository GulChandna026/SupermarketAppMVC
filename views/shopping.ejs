<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App - Shop</title>
  <style>
    .search-section {
      margin-bottom: 40px;
      display: flex;
      gap: 10px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .search-section input {
      padding: 12px 20px;
      border: 2px solid #667eea;
      border-radius: 50px;
      width: 300px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    .search-section input:focus {
      outline: none;
      border-color: #764ba2;
      box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
    }

    .search-section button {
      padding: 12px 30px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      border-radius: 50px;
      font-weight: bold;
      cursor: pointer;
      transition: transform 0.2s ease;
    }

    .search-section button:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 30px;
      margin-bottom: 40px;
    }

    .product-card {
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      border: 2px solid transparent;
    }

    .product-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
      border-color: #667eea;
    }

    .product-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .product-info {
      padding: 20px;
    }

    .product-name {
      font-size: 1.2rem;
      font-weight: bold;
      color: #2c3e50;
      margin-bottom: 10px;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .product-name:hover {
      color: #667eea;
    }

    .product-details {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }

    .product-price {
      font-size: 1.5rem;
      font-weight: bold;
      color: #27ae60;
    }

    .product-stock {
      font-size: 0.9rem;
      color: #7f8c8d;
      background: #ecf0f1;
      padding: 5px 10px;
      border-radius: 20px;
    }

    .product-stock.low {
      color: #e74c3c;
      background: #fadbd8;
    }

    .product-actions {
      display: flex;
      gap: 10px;
      align-items: center;
    }

    .product-actions select {
      padding: 8px 10px;
      border: 2px solid #667eea;
      border-radius: 5px;
      font-size: 0.9rem;
      background: white;
      cursor: pointer;
    }

    .product-actions button {
      flex: 1;
      padding: 10px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .product-actions button:hover {
      transform: scale(1.05);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .product-actions button:active {
      transform: scale(0.98);
    }

    .no-products {
      text-align: center;
      padding: 60px 20px;
      color: #7f8c8d;
      font-size: 1.2rem;
      grid-column: 1 / -1;
    }

    .view-cart-btn {
      position: fixed;
      bottom: 30px;
      right: 30px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 15px 25px;
      border: none;
      border-radius: 50px;
      font-weight: bold;
      cursor: pointer;
      box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-block;
      z-index: 1000;
    }

    .view-cart-btn:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(102, 126, 234, 0.6);
      color: white;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">üõí Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/cart">üõçÔ∏è View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/order-history">üì¶ Order History</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">üö™ Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container">
    <div class="welcome-text mb-4">Welcome, <strong><%= user.username %></strong>!</div>
    <h2 class="page-title">üõçÔ∏è Browse Products</h2>

    <!-- Search Section -->
    <div class="search-section">
      <input type="text" id="searchInput" placeholder="üîç Search by first letter (e.g. A)" onkeyup="filterProducts()">
      <button onclick="resetSearch()">Reset</button>
    </div>

    <!-- Products Grid -->
    <% if(products.length > 0) { %>
      <div class="product-grid" id="productGrid">
        <% for(let i = 0; i < products.length; i++) { %>
          <div class="product-card" data-product-name="<%= products[i].productName.toLowerCase() %>">
            <img src="images/<%= products[i].image %>" alt="<%= products[i].productName %>" class="product-image" onerror="this.src='https://via.placeholder.com/250x200?text=<%= products[i].productName %>'">
            
            <div class="product-info">
              <a href="/product/<%= products[i].id %>" class="product-name"><%= products[i].productName %></a>
              
              <div class="product-details">
                <span class="product-price">$<%= products[i].price.toFixed(2) %></span>
                <span class="product-stock <%= products[i].quantity <= 5 ? 'low' : '' %>">
                  <%= products[i].quantity > 0 ? products[i].quantity + ' in stock' : 'Out of stock' %>
                </span>
              </div>

              <div class="product-actions">
                <select class="form-control" id="quantity-<%= products[i].id %>" <%= products[i].quantity <= 0 ? 'disabled' : '' %>>
                  <% for (let q = 1; q <= Math.min(5, products[i].quantity); q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                  <% } %>
                </select>

                <form action="/add-to-cart/<%= products[i].id %>" method="POST" style="width: 100%;">
                  <input type="hidden" name="quantity" id="qty-<%= products[i].id %>" value="1" onchange="document.getElementById('qty-<%= products[i].id %>').value = document.getElementById('quantity-<%= products[i].id %>').value">
                  <button type="submit" class="btn btn-primary" <%= products[i].quantity <= 0 ? 'disabled' : '' %>>
                    <% if(products[i].quantity > 0) { %>
                      Add to Cart
                    <% } else { %>
                      Unavailable
                    <% } %>
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% } %>
      </div>
      <div id="noResults" class="no-products" style="display:none;"></div>
    <% } else { %>
      <div class="alert alert-info mt-4">
        <p class="mb-0">No products available at the moment.</p>
      </div>
    <% } %>
  </div>

  <!-- Floating Cart Button -->
  <a href="/cart" class="view-cart-btn">üõí View Cart</a>

  <!-- Search Script -->
  <script>
    function filterProducts() {
      const rawInput = document.getElementById('searchInput').value.trim().toLowerCase();
      const productCards = document.querySelectorAll('.product-card');
      let visibleCount = 0;

      // If no input, show all
      if (!rawInput) {
        productCards.forEach(card => card.style.display = 'block');
        return;
      }

      // If user typed a single character, match first letter only.
      // If user typed more than one character, match prefix (startsWith).
      if (rawInput.length === 1) {
        const firstChar = rawInput.charAt(0);
        productCards.forEach(card => {
          const productName = card.getAttribute('data-product-name');
          if (productName && productName.charAt(0) === firstChar) {
            card.style.display = 'block';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });
      } else {
        // Prefix match for longer queries (so "bro" matches "broccoli" but not "banana")
        productCards.forEach(card => {
          const productName = card.getAttribute('data-product-name');
          if (productName && productName.startsWith(rawInput)) {
            card.style.display = 'block';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });
      }

      // Show "no results" message if needed (don't overwrite grid DOM)
      const noEl = document.getElementById('noResults');
      if (visibleCount === 0) {
        if (noEl) {
          noEl.textContent = `No products start with "${firstChar.toUpperCase()}".`;
          noEl.style.display = 'block';
        }
      } else {
        if (noEl) noEl.style.display = 'none';
      }
    }

    function resetSearch() {
      document.getElementById('searchInput').value = '';
      filterProducts();
      // Do not reload; just restore the grid
    }

    // Update quantity when select changes
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('select[id^="quantity-"]').forEach(select => {
        select.addEventListener('change', function() {
          const productId = this.id.replace('quantity-', '');
          document.getElementById('qty-' + productId).value = this.value;
        });
      });
    });
  </script>
</body>
</html>
