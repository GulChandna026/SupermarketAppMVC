<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Shopping Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">ğŸ›’ Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">ğŸ›ï¸ Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">ğŸ›’ Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/order-history">ğŸ“¦ Order History</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">ğŸšª Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="welcome-text">Welcome, <strong><%= user.username %></strong></div>
    <h2 class="page-title">ğŸ›’ Shopping Cart</h2>

    <% if (cart.length === 0) { %>
      <div class="alert alert-info" role="alert">
        Your cart is empty. <a href="/shopping">Continue shopping â†’</a>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Product</th>
              <th width="80">Image</th>
              <th width="100">Quantity</th>
              <th width="100">Price</th>
              <th width="100">Total</th>
              <th width="80">Action</th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0; %>
            <% cart.forEach(item => { %>
              <tr>
                <td><strong><%= item.productName %></strong></td>
                <td><img src="/images/<%= item.image %>" alt="<%= item.productName %>" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;"></td>
                <td>
                  <form action="/update-quantity/<%= item.product_id %>" method="POST" class="d-flex gap-2">
                    <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="form-control form-control-sm" style="width: 70px;">
                    <button class="btn btn-sm btn-primary">Update</button>
                  </form>
                </td>
                <td>$<%= parseFloat(item.unit_price).toFixed(2) %></td>
                <td><strong>$<%= (item.unit_price * item.quantity).toFixed(2) %></strong></td>
                <td>
                  <a href="/remove-from-cart/<%= item.product_id %>" class="btn btn-sm btn-danger" onclick="return confirm('Remove from cart?')">Remove</a>
                </td>
              </tr>
              <% total += item.unit_price * item.quantity; %>
            <% }); %>
          </tbody>
        </table>
      </div>

      <div class="mt-4">
        <div class="alert alert-light" role="alert">
          <h5 class="mb-0">Subtotal: <strong style="float: right; color: #27ae60;">$<%= total.toFixed(2) %></strong></h5>
        </div>
      </div>

      <div class="mt-4 text-center">
        <a href="/shopping" class="btn btn-secondary me-2">â† Continue Shopping</a>
        <form action="/checkout" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-success">âœ“ Proceed to Checkout</button>
        </form>
      </div>
    <% } %>
  </div>
</body>
</html>

